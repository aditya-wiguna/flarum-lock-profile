{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "jsxFactory": "m",
    "skipLibCheck": true,
    "strict": false,
    "paths": {
      "flarum/*": ["../../vendor/flarum/core/js/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
